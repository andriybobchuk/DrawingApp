<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DrawingActivity">

    <FrameLayout
            android:id="@+id/fl_drawing_view_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <!-- In FrameLayout the component which are
       added below are in foreground and added above are in Background.-->
        <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="image"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_character_one"/>

        <com.andriybobchuk.drawingapp.DrawingView
                android:id="@+id/drawing_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BBEBEBED" />
    </FrameLayout>

    <!-- Color pallet_normal -->
    <LinearLayout
            android:id="@+id/ll_paint_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_toolbars"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/skin"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/skin" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/black" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/red"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/red" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/green"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/green" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/blue"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/blue" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/yellow"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/yellow" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/lollipop"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/lollipop" />

        <ImageButton
                android:onClick="paintClicked"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="2dp"
                android:background="@color/random"
                android:contentDescription="image"
                android:src="@drawable/pallet_normal"
                android:tag="@color/random" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_toolbars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <ImageButton
                android:id="@+id/ib_gallery"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="5dp"
                android:contentDescription="image"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/ic_gallery" />

        <ImageButton
                android:id="@+id/ib_undo"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="5dp"
                android:contentDescription="image"
                android:scaleType="fitXY"
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@drawable/ic_undo" />

        <ImageButton
                android:id="@+id/ib_redo"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="5dp"
                android:contentDescription="image"
                android:scaleType="fitXY"
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@drawable/ic_redo" />

        <ImageButton
                android:id="@+id/ib_brush"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:layout_margin="5dp"
                android:contentDescription="image"
                android:scaleType="fitXY"
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@drawable/ic_brush" />

        <ImageButton
                android:id="@+id/ib_save"
                android:layout_width="@dimen/tool_bar_elements"
                android:layout_height="@dimen/tool_bar_elements"
                android:contentDescription="image"
                android:scaleType="fitXY"
                android:alpha="0.7"
                android:background="@color/white"
                android:src="@drawable/ic_save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>